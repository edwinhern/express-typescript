{
	"$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
	"vcs": { "enabled": false, "clientKind": "git", "useIgnoreFile": false },
	"files": { "ignoreUnknown": false, "ignore": ["dist"] },
	"formatter": {
		"enabled": true,
		"lineWidth": 120,
		"bracketSpacing": true
	},
	"organizeImports": { "enabled": true },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	}
}
